<section class="about py-md-5 py-5" id="services">
    <div class="container py-md-5">
        <h3 class="title-w3pvt text-center mb-5">Our Features</h3>
        <div id="featureCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @{
                    var features = Model.Our_Features.ToList();
                    int totalSlides = (int)Math.Ceiling((double)features.Count / 3);

                    for (int slideIndex = 0; slideIndex < totalSlides; slideIndex++)
                    {
                        bool isActive = slideIndex == 0;
                        <div class="carousel-item @(isActive ? "active" : "")">
                            <div class="feature-grids row mt-5">
                                @for (int cardIndex = slideIndex * 3; cardIndex < (slideIndex + 1) * 3 && cardIndex < features.Count; cardIndex++)
                                {
                                    var feature = features[cardIndex];
                                    <div class="col-md-4 gd-bottom text-center p-lg-5">
                                        <div class="card">
                                            <img src="@feature.Image" class="card-img-top" alt="Feature Image">
                                            <div class="card-body">
                                                <h3 class="card-title">@feature.Title</h3>
                                                <p class="card-text">@feature.Short_Description</p>
                                                 <a href="@Url.Action("Services", "Home", new { image = feature.Image, title = feature.Title, description = feature.Long_Description })" class="btn btn-primary">Learn More</a>

                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                @* <a asp-area="" asp-controller="Home" asp-action="Services" class="btn btn-primary">Learn More</a> *@
@*                 <a href="@Url.Action("Services", "Home", new { image = feature.Image, title = feature.Title, description = feature.Long_Description })" class="btn btn-primary">Learn More</a>
 *@
            </div>
            <a class="carousel-control-prev" href="#featureCarousel" role="button" data-slide="prev" style="left:-110px">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#featureCarousel" role="button" data-slide="next" style="right:-110px">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>

