@if (Model.Portfolios.Any())
{
    <section class="gallery py-5" id="gallery">
        <div class="container py-md-5">
            <h3 class="title-w3pvt text-center mb-5">Our Portfolio</h3>
            <div class="gallery-content">
                <div class="row">
                    @{
                        int counter = 1;
                    }
                    @foreach (var PF in Model.Portfolios)
                    {
                        <div class="col-md-4 col-sm-6 gal-img">
                            <a href="#gal@counter"><img src="@PF.Portfolio_Image" alt="aegis" class="img-fluid mt-4"></a>
                        </div>
                        counter++;
                    }
                </div>
                <!-- gallery popups -->
                @{
                    int cntr = 1;
                }
                @foreach (var PF in Model.Portfolios)
                {
                    <div id="gal@cntr" class="popup-effect">
                        <div class="popup">
                            <img src="@PF.Portfolio_Image" alt="Popup image" class="img-fluid mt-4" />
                            <a class="close" href="#gallery">&times;</a>
                        </div>
                    </div>
                    cntr++;
                }
            </div>
        </div>
    </section>
}
